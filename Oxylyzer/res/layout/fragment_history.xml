<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="com.mcfad.oxylyzer.diagnosis.MedicalQuestionnaire"
    tools:ignore="MergeRootFrame">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/no_recordings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="You haven&apos;t made any recordings yet.\nConnect a Pulse Oximeter and then disconnect it to complete a recording"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Recordings:"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/records"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Recording Description:"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/graph1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/button_view_report"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="showReport"
        android:text="@string/view_report" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_export"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Export" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Delete" />

    </LinearLayout>
	<Button
        android:id="@+id/button_questionnaire"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Take Medical Questionnaire" />


</LinearLayout>
</ScrollView>