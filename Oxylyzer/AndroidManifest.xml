<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcfad.oxylyzer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mcfad.oxylyzer.MainActivity"
            android:label="Oxylyzer" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mcfad.oxylyzer.ConnectActivity"
            android:label="@string/title_activity_connect" >
        </activity>

        <service
            android:name="com.mcfad.oxylyzer.OximeterService"
            android:enabled="true" >
        </service>

        <activity
            android:name="com.mcfad.oxylyzer.Calendar"
            android:label="@string/title_activity_calendar" >
        </activity>
        <activity
            android:name="com.mcfad.oxylyzer.NewProfileActivity"
            android:label="@string/title_activity_new_profile" >
        </activity>
        <activity
            android:name="com.mcfad.oxylyzer.Report"
            android:label="@string/title_activity_report" >
        </activity>

        <provider
            android:name="com.mcfad.oxylyzer.db.OxContentProvider"
            android:authorities="com.mcfad.oxylyzer.db" >
        </provider>
    </application>

    <uses-permission android:name="android.permission.BLUETOOTH" />

</manifest>